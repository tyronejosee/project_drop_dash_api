# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,c,cpp,h,ini}]
indent_style = space
indent_size = 4

[*.{html,css,scss,js,json,yml,yaml,xml}]
indent_style = space
indent_size = 2

[*.rst]
indent_size = 3

[*.svg]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
